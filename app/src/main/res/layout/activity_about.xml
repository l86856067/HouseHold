<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="android.app.wolf.peoplehousehold.view.activity.AboutActivity">

    <!-- 上边放置toolbar的布局 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/about_toolbar"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp"
        android:layout_height="60dp"
        android:background="@color/app_theme">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:text="关于我们"
                android:textColor="@color/app_white"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/about_back"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_back_10"
                android:padding="5dp"
                android:src="@drawable/arrow"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/about_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/about_toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_image"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:lineSpacingExtra="7dp"
        android:textSize="15sp"
        android:text="家菲猫家政是一款实用性信息平台，家菲猫家政致力于打造家政行业安全、负责、健康，坚持给每一位用户营造舒适高雅的生活环境，专业的阿姨队伍。并具有服务供求，管理营销，大数据支撑，智能化管理等服务体系，家菲猫为所有用户提供高品质家政服务"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="《上海家菲猫家政用户协议》"
        android:textSize="14sp"
        android:textColor="@color/app_theme"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/houtou"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="家菲猫  版权所有"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>
