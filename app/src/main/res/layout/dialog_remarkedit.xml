<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入备注"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/dialog_remark_edit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:background="@drawable/shape_feedback_editlayout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_theme"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:id="@+id/dialog_remark_view"
            android:layout_width="0.1dp"
            android:layout_height="50dp"
            android:background="@color/app_theme"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/dialog_remark_cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/dialog_remark_view"
            android:text="取消"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="7dp"/>
        <TextView
            android:id="@+id/dialog_remark_callBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/dialog_remark_view"
            android:text="提交"
            android:textColor="@color/app_theme"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="7dp"/>
    </RelativeLayout>

</LinearLayout>
