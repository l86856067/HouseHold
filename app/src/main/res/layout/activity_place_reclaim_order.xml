<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_background"
    tools:context="android.app.wolf.peoplehousehold.view.activity.PlaceReclaimOrderActivity">


    <!-- 上边放置toolbar的布局 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/placereclaim_toolbar"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp"
        android:layout_height="60dp"
        android:background="@color/app_theme">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 左上角的返回按钮 -->
            <ImageView
                android:id="@+id/placereclaim_btnBack"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:text="开荒保洁"
                android:textColor="@color/app_white"
                android:gravity="center"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/placereclaim_bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/app_texthui"/>
        <TextView
            android:id="@+id/placereclaim_money"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/app_white"
            android:text="付款："
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/placereclaim_place"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/placereclaim_money"
            android:background="@color/app_theme"
            android:text="立即下单"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/app_white"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/placereclaim_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/placereclaim_bottomLayout"
        android:weightSum="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/placereclaim_time"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@color/app_white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="上门时间"
                    android:textColor="@color/app_black"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/placereclaim_timeChoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请选择"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/placereclaim_acreage"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/app_white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="房间面积(m²)"
                    android:textColor="@color/app_black"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/placereclaim_acreageInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="4"
                    android:background="@null"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/app_white"
            android:paddingTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="10sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/regi_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textSize="16sp"
                android:textColor="@color/app_black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/placereclaim_editName"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:maxLength="15"
                android:singleLine="true"
                android:background="@null"
                android:hint="请输入姓名"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/app_texthui"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/app_white"
            android:paddingTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="10sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/regi_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="电话"
                android:textSize="16sp"
                android:textColor="@color/app_black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/placereclaim_editTele"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true"
                android:background="@null"
                android:hint="请输入姓名"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/app_texthui"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/app_white"
            android:paddingTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="10sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/regi_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="地址"
                android:textSize="16sp"
                android:textColor="@color/app_black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/placereclaim_editAddre"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:background="@null"
                android:hint="请输入姓名"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/placereclaim_remarks"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"
            android:background="@color/app_white"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="备注"
                android:textColor="@color/app_black"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginLeft="10sp"/>
            <ImageView
                android:id="@+id/placereclaim_remarksImage"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_of_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/placereclaim_remarksText"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="输入"
                android:gravity="center_vertical|end"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/placereclaim_remarksImage"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/placereclaim_coupon"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/app_white"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="优惠券"
                android:textColor="@color/app_black"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginLeft="10sp"/>
            <ImageView
                android:id="@+id/placereclaim_couponImage"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_of_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="选择"
                android:gravity="center_vertical|end"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/placereclaim_couponImage"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/placereclaim_toolbar"
        android:layout_above="@id/placereclaim_linearLayout">
        <!--<include layout="@layout/layout_treaty"/>-->
    </ScrollView>

</RelativeLayout>
