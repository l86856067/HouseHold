<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/app_background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/user_head_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="反馈"
                android:textSize="14sp"
                android:background="@drawable/shape_main_feedbutton_background"
                android:gravity="center_vertical"
                android:textColor="@color/app_white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/userfragment_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_head"/>

            <TextView
                android:id="@+id/userfragment_userName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="用户名"
                android:textSize="18sp"
                android:textColor="@color/app_black"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/userfragment_head"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/userfragment_userName"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <RatingBar
                    android:id="@+id/orderdetails_ratingStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    style="?android:ratingBarStyleSmall"
                    android:progressTint="@color/app_yellow"
                    android:numStars="5"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userfragment_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_white"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/userfragment_account_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_icon1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="个人信息"
                android:layout_toRightOf="@id/userfragment_account_image"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_of_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userfragment_recharge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_white"
            android:layout_marginTop="0.1dp">
            <ImageView
                android:id="@+id/userfragment_recharge_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_icon2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="账户信息"
                android:layout_toRightOf="@id/userfragment_recharge_image"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_of_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userfragment_package"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_white"
            android:layout_marginTop="0.1dp">
            <ImageView
                android:id="@+id/userfragment_package_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_icon3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="套餐/优惠券"
                android:layout_toRightOf="@id/userfragment_package_image"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_of_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userfragment_service"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_white"
            android:layout_marginTop="0.1dp">

            <ImageView
                android:id="@+id/userfragment_service_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_icon4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="联系客服"
                android:layout_toRightOf="@id/userfragment_service_image"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_of_right"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/userfragment_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_white"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/userfragment_about_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_icon5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="关于我们"
                android:layout_toRightOf="@id/userfragment_about_image"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_of_right"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/userfragment_inspect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_white"
            android:layout_marginTop="0.1dp">
            <ImageView
                android:id="@+id/userfragment_inspect_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_icon6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="检查新版"
                android:layout_toRightOf="@id/userfragment_inspect_image"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_of_right"/>
        </RelativeLayout>
        
        <Button
            android:id="@+id/userfragment_unlogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_red_20"
            android:layout_margin="50dp"
            android:textColor="@color/app_white"
            android:textSize="16sp"
            android:text="退出登录"/>

    </LinearLayout>

</ScrollView>
