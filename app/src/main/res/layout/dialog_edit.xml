<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="编辑信息"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/app_texthui"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/dialog_edit_userName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:maxLength="10"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_feedback_editlayout"/>

 <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地址"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/app_texthui"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/dialog_edit_userAddress"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_feedback_editlayout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_theme"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:id="@+id/dialog_edit_view3"
            android:layout_width="0.1dp"
            android:layout_height="50dp"
            android:background="@color/app_theme"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/dialog_edit_cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/dialog_edit_view3"
            android:text="取消"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="7dp"/>
        <TextView
            android:id="@+id/dialog_edit_callBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/dialog_edit_view3"
            android:text="提交"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="7dp"/>
    </RelativeLayout>

</LinearLayout>
